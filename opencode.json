{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "glootie": {
      "type": "local",
      "command": ["npx", "-y", "mcp-glootie"],
      "enabled": true,
      "timeout": 360000
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp"],
      "enabled": true,
      "timeout": 360000
    },
    "vexify": {
      "type": "local",
      "command": ["npx", "-y", "vexify", "mcp"],
      "enabled": true,
      "timeout": 360000
    }
  }
}